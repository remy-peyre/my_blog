{% extends 'layout.html.twig' %}

{% block content %}
    <div id="error-block-add-article"></div>
    <section class="add_article">
        <div class="add_article_form">
            <form action="?action=add_article" id="add-article-form" name="add-article-form" enctype="multipart/form-data" method="POST">
                <fieldset><legend>Créer un article</legend>
                    <label>
                        <span>Titre
                            <span class="required">*</span>
                        </span>
                        <input type="text" name="title">
                    </label>
                    <label>
                        <span>Image
                            <span class="required">*</span>
                        </span>
                        <input type="file" id="image" name="image">
                    </label>
                    <label for="content">
                        <span>Contenu
                            <span class="required">*</span>
                        </span>
                        <textarea name="content" placeholder="Enter text here..."></textarea></textarea>
                    </label>
                    <label>
                        <span>&nbsp;</span>
                        <input type="submit" value="Créer un article">
                    </label>
                </fieldset>
            </form>
        </div>
    </section>
    <script type="text/javascript" src="web/script/ajax-add-article.js"></script>
{% endblock %}
