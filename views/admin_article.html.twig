{% extends 'admin.html.twig' %}

{% block content %}
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>User id</th>
            <th class="size_delete">Supprimer</th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article['id'] }}</td>
                <td>{{ article['title'][:20] }}...</td>
                <td>{{ article['user_id'] }}</td>
                <td>
                    <label for="{{ article['id'] }}">
                        <img class="delete" src="web/img/delete.png" alt="delete user">
                    </label>
                    <form class="none" action="?action=admin_article" method="POST">
                        <input type="text" name="id" value="{{ article['id'] }}">
                        <input type="submit" id="{{ article['id'] }}" value="Delete">
                    </form>
                </td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}
