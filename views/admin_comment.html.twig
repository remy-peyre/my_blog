{% extends 'admin.html.twig' %}

{% block content %}
    <table>
        <tr>
            <th>ID</th>
            <th>Content</th>
            <th>Article ID</th>
            <th>User ID</th>
            <th class="size_delete">Supprimer</th>
        </tr>
        {% for comment in comments %}
            <tr>
                <td>{{ comment['id'] }}</td>
                <td>{{ comment['content'] }}</td>
                <td>{{ comment['article_id'] }}</td>
                <td>{{ comment['user_id'] }}</td>
                <td><img class="delete" src="web/img/delete.png" alt="delete user"></td>
            </tr>
        {% endfor %}

    </table>{% endblock %}
