{% extends 'admin.html.twig' %}

{% block content %}
    <table>
        <tr>
            <th>Pesudo</th>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th class="size_delete">Supprimer</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user['username'] }}</td>
            <td>{{ user['id'] }}</td>
            <td>{{ user['firstname'] }}</td>
            <td>{{ user['lastname'] }}</td>
            <td>
                <label for="{{ user['id'] }}">
                    <img class="delete" src="web/img/delete.png" alt="delete user">
                </label>
                <form class="none" action="?action=admin_user" method="POST">
                    <input type="text" name="id" value="{{ user['id'] }}">
                    <input type="submit" id="{{ user['id'] }}" value="Delete">
                </form>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
